<!DOCTYPE html>
<html>
<head>
	<title>Edit Profile</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<style type="text/css">
	</style>
</head>
  <script defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5Z5Lca-DVHCawTBO_y0sfzUaQiPij480&callback=loadMap"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script type="text/javascript"></script>
  
<body>
 <%- include('../views/header', {display: 'profile', userLoggedIn: userLoggedIn, userQuery: userQuery}); %>

<div class="d-flex align-items-center justify-content-center container" style="min-height: 90vh;">
	<div class="w-100" style="max-width: 450px;">
		<div class="card">
			<div class="card-body">
				<h2 class="text-center mb-4">Update Profile</h2>
				<%if (message != null) { %>
			  		<font color="red"><%= message %><p>
			  	<% } %>
			  	<font color="black">
				<form action="/updateprofile" method="post">
					<div class="form-group">
						<label class="form-label">First Name</label>
						<input name="firstname" class="form-control" value=<%= data.firstname.S %>>
					</div>
					<div class="form-group">
						<label class="form-label">Last Name</label>
						<input name="lastname" class="form-control" value=<%= data.lastname.S %>>
					</div>
					<div class="form-group">
						<label class="form-label">Email</label>
						<input name="email" type="email" class="form-control" value=<%= data.email.S %>>
					</div>
					<div class="form-group">
						<label class="form-label">Password</label>
						<input name="password" placeholder="Leave blank to keep the same" type="password" class="form-control">
					</div>
					<div class="form-group">
						<label class="form-label">Affiliation</label>
						<input class="form-control" name="affiliation" value="<%= data.affiliation.S %>">
					</div>
					<div class="form-group">
						<label class="form-label">News Categories</label>
						<select class="form-select" name="categories" size="4" multiple aria-label="multiple select example">
						  <% for (var i = 0; i < categories.length; i++) { %>
						  		<option value="<%= categories[i] %>" <%if(data.news.SS.includes(categories[i])) {%> selected<% }%>> 
						  			<%= categories[i] %> 
						  		</option>
						  <% } %>
						</select>
					</div>
					<br/>
					<button type="submit" class="w-100 btn btn-primary">
						Update
					</button>
				</form>
			</div>
		</div>
	<div class="w-100 text-center mt-2">
		<% console.log("HERE: " + userLoggedIn) %>
		<a href="/profile/<%= userLoggedIn %>">Cancel</a></div>
	<div>
	</div></div></div>
</body>
</html>
